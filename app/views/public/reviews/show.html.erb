<div>
  <h2>レビュー詳細</h2>
  <div>
    <% if current_user.present? && @review.user == current_user %>
      <%= link_to "編集", edit_review_path(params[:id]) %>
    <% end %>
  </div>
  <table>
    <td>
      <% @review.review_images.each do |image| %>
        <%= attachment_image_tag image, :image, :fill, 150, 150 %>
      <% end %>
    </td>
    <td><%= @review.title %></td>
    <td>
      <% @review.scenes.each do |scene| %>
        <%= scene.name %>
      <% end %>
    </td>
    <td>
      <% @review.atmospheres.each do |atmosphere| %>
        <%= atmosphere.name %>
      <% end %>
    </td>
    <td><%= @review.text %></td>
  </table>
  <div>
    <% if current_user.email == "guest@example.com" %>
    <% else %>
      <%= form_with(model:[@review, @review_comment], local: true) do |f| %>
        <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
      <% end %>
    <% end %>
  </div>
  <div>
    <p>コメント件数：<%= @review.review_comments.count %></p>
    <% @review.review_comments.each do |review_comment| %>
      <%= review_comment.user.nickname %>
      <%= review_comment.comment %>
      <%= review_comment.created_at.strftime('%Y/%m/%d') %>
      <% if @review_comment.user == current_user %>
      <div>
        <%= link_to "削除", review_review_comment_path(review_comment.review, review_comment), method: :delete %>
      </div>
      <% end %>
    <% end %>
  </div>

  <p><%= link_to "#{@review.review_comments.count} コメント", review_path(@review.id) %></p>
</div>
