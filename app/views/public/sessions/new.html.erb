 <div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
      <div>
        <span class="h2">ログイン<span>
      </div>
      <%= form_with model: @user, url: user_session_path, local:true do |f| %>
      <div class="table col-md-12" style="display: flex; margin-top: 5%; text-align: center;">
        <span class="header col-4" style="display: inline-block;">メールアドレス</span>
        <span class="header col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
      </div>
      <div class="table col-md-12" style="display: flex; margin-top: 5%; text-align: center;">
        <span class="header col-4" style="display: inline-block;">パスワード  </span>
        <span class="header col-6"><%= f.password_field :password, autocomplete: "current-password" %></span>
      </div>
      <div class="text-center" style="margin: 5%;">
        <%= f.submit "ログイン" , class: 'btn btn-success'  %>
      </div>
      <% end %>
    </div>
  </div>
</div>