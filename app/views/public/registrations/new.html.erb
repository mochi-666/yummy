  <div class="container-fluid">
	  <div class="row h-50">
	    <div class= "col-md-6 offset-md-3 mt-5">
	      <div>
          <span class="h2 mr-5">新規会員登録<span>
        </div>
        <div class="table-responsive-sm" style="display: flex; margin-top: 5%; text-align: center;">
        <%= render "public/shared/error_messages", resource: resource %>
        <%= form_with model: @user, url:  user_registration_path(resource), local:true do |f| %>
          <div class="table col-md-12" style="display: flex; margin-top: 5%; text-align: center;">
            <span class="header col-3" style="display: inline-block;">名前(姓)</span>
            <span class="header col-3"><%= f.text_field :first_name, autofocus: true %></span>
            <span class="header col-3">(名)</span>
            <span class="header col-3"><%= f.text_field :last_name, autofocus: true %></span>
          </div>
          <div class="table col-md-12" style="display: flex; margin-top: 5%; text-align: center;">
            <span class="header col-3" style="display: inline-block;">フリガナ(セイ)</span>
            <span class="header col-3"><%= f.text_field :first_name_kana, autofocus: true %></span>
            <span class="header col-3">(メイ)</span>
            <span class="header col-3"><%= f.text_field :last_name_kana, autofocus: true %></span>
          </div>
          <div class="table col-md-12" style="display: flex; margin-top: 5%; text-align: center;">
            <span class="header col-3" style="display: inline-block;">ニックネーム</span>
            <span class="header col-3"><%= f.text_field :nickname, autofocus: true %></span>
          </div>
          <div class="table col-md-12" style="display: flex; margin-top: 5%; text-align: center;">
            <span class="header col-3" style="display: inline-block;">メールアドレス</span>
            <span class="header col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
          </div>
          <div class="table col-md-12" style="display: flex; margin-top: 5%; text-align: center;">
            <span class="header col-3" style="display: inline-block;">パスワード(６文字以上)</span>
            <span class="header col-3">
              <% if @minimum_password_length %>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </span>
          </div>
          <div class="table col-md-12" style="display: flex; margin-top: 5%; text-align: center;">
            <span class="header col-3" style="display: inline-block;">パスワード(確認)</span>
            <span class="header col-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></span>
          </div>
          <div class="text-center" style="margin: 5%;">
            <%= f.submit "新規登録" ,class: "btn btn-success" %>
          </div>
        <% end %>
       </div>
      </div>
    </div>
  </div>