<div class="container-fluid">
	<div class="row h-50">
	  <div class= "col-md-6 offset-md-3 mt-5">
	    <div>
        <span class="h2 mr-5">会員情報編集</><span>
      </div>
      <div class="table-responsive-sm">
        <table class="table">
          <tbody class="table table-borderless">
          <% if @user.errors.any? %>
            <%= @user.errors.count %>件のエラーが発生しました
            <% @user.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          <% end %>
          <%= form_with model: @user,url: user_path,local:true do |f| %>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :first_name, autofocus: true %></td>
              <td><%= f.text_field :last_name, autofocus: true %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :first_name_kana, autofocus: true %></td>
              <td><%= f.text_field :last_name_kana, autofocus: true %></td>
            </tr>
            <tr>
              <td>ニックネーム</td>
              <td><%= f.text_field :nickname, autofocus: true %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %> </td>
            </tr>
          </tbody>
        </table>
        <table style="display: inline-block; margin-left: 275px;">
          <tr>
            <td class="mt-5" style="width: 300px;"><%= f.submit "変更を保存", class: "btn btn-success" %></td>
            <td class="mt-5"><%= link_to "退会する",  unsbscribe_path, class: "btn btn-danger" %></td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
