<div class="container">
  <p class="h4 font-weight-bold" style="margin-left: 5%; margin-top: 5%;">マイページ</p>
  <div style="display: inline-block;">
    <div clas="col">
      <p  style="display: inline-block; width:120px;" class="h5 font-weight-bold mt-3">登録情報</p>
      <p  style="display: inline-block; width:120px;" ><%= link_to "編集する", edit_user_path(current_user.id), class: "btn btn-success" %></p>
    </div>
    <table style="margin-bottom: 5%;">
      <tbody  class="table table-bordered">
        <tr>
          <td>氏名</td>
          <td style="width: 500px;"><%= @user.first_name + @user.last_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td style="width: 500px;"><%= @user.first_name_kana + @user.last_name_kana %></td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td style="width: 500px;"><%= @user.nickname %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>