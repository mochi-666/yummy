<!DOCTYPE html>
<html>
  <head>
    <title>Yummy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">ロゴマーク</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto ">
          <% if user_signed_in? %>
          <li class="nav-item active mr-2 mb-2">
            <%= link_to 'マイページ', my_page_path, class: "btn btn-success" %>
          </li>
          <li class="nav-item active mr-2 mb-2">
            <%= link_to '店舗一覧', stores_path, class: "btn btn-primary" %>
          </li>
          <li class="nav-item active mr-2 mb-2">
            <%= link_to '詳細検索', gernres_path, class: "btn btn-warning" %>
          </li>
          <li class="nav-item active mr-2 mb-2">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
          </li>
          <% elsif admin_signed_in? %>
          <li class="nav-item active mr-2 mb-2">
            <%= link_to '店舗一覧', admin_stores_path, class: "btn btn-primary" %>
          </li>
          <li class="nav-item active mr-2 mb-2">
            <%= link_to '顧客一覧', admin_users_path, class: "btn btn-secondary" %>
          </li>
          <li class="nav-item active mr-2 mb-2">
            <%= link_to 'ジャンル一覧', admin_gernres_path, class: "btn btn-dark" %>
          </li>
          <li class="nav-item active mr-2 mb-2">
            <%= link_to'詳細検索', admin_searches_path, class: "btn btn-primary" %>
          </li>
          <li class="nav-item active mr-2 mb-2">
           <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-danger" %>
          </li>
          <% else %>
          <li class="nav-item active mr-2 mb-2">
            <%= link_to "新規登録", new_user_registration_path, class: "btn btn-info" %>
          </li>
          <li class="nav-item active mr-2 mb-2">
            <%= link_to "ログイン", new_user_session_path, class: "btn btn-success" %>
          </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
