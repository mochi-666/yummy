<div class="container-fluid">
	  <div class="row h-50">
	    <div class= "col-md-6 offset-md-3 mt-5">
	      <div>
          <span class="h2 mr-5", style="margin-top: 5%;"><%= @user.first_name + @user.last_name %>さんの会員情報編集<span>
        </div>
        <% if @user.errors.any? %>
          <div><%= @user.errors.count %>件のエラーが発生しました</div>
          <% @user.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        <% end %>
        <div class="table-responsive-sm">
        <%= form_with model: @user,url: admin_user_path, local:true do |f| %>
        <table class="table">
          <tbody class="table table-borderless">
            <tr>
              <td>会員ID</td>
              <td><%= @user.id %></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :first_name, autofocus: true %></td>
              <td><%= f.text_field :last_name, autofocus: true %></td>
            </tr>
            <tr>
              <td>フリガナ(セイ)</td>
              <td><%= f.text_field :first_name_kana, autofocus: true %></td>
              <td><%= f.text_field :last_name_kana, autofocus: true %></td>
            </tr>
            <tr>
              <td>ニックネーム</td>
              <td><%= f.text_field :nickname, autofocus: true %></td>
            </tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %> </td>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <td>
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active, "有効" %>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active, "退会" %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "変更を保存", class: "btn btn-success"%></td>
            </tr>
          </tbody>
        </table>
        <% end %>
       </div>
      </div>
    </div>
  </div>
