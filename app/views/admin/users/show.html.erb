<div class="container">
  <p class="h4", style="margin-top: 5%;"><%= @name %>さんの会員詳細</p>
  <table class="table table-borderless"  style="margin: 3%; width: 50%; margin-left: 25%;">
    <tr>
      <td>会員ID</td>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @name_kana %></td>
    </tr>
    <tr>
      <td>ニックネーム</td>
      <td><%= @user.nickname %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <% if @user.is_active %>
      <td  class="font-weight-bold" style="color: #28a745;">有効</td>
      <% else %>
      <td  class="font-weight-bold" style="color: #dc3545;">退会</td>
      <% end %>
    </tr>
  </table>
  <div style="margin-left: 50%;"><%= link_to "編集する", edit_admin_user_path, class: "btn btn-success" %></div>
</div>