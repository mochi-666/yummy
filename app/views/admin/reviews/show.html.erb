<div class="container">
  <h2>レビュー詳細</h2>
  <p class="text-right"><%= link_to "レビュー削除", admin_review_path(@review), method: :delete, class: "btn btn-danger" %></p>
  <table style="width: 500px; text-align-last: left; margin-left: 100px; margin-bottom: 50px;">
    <tr>
      <td style="display: inline-block;">
        <% @review.review_images.each do |image| %>
          <%= attachment_image_tag image, :image, :fill, 150, 150 %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td class="font-weight-bold">タイトル</td>
      <td style="height: 50px;"><%= @review.title %></td>
    </tr>
    <tr>
      <td class="font-weight-bold">利用シーン</td>
      <td style="height: 50px;">
        <% @review.scenes.each do |scene| %>
          <%= scene.name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td class="font-weight-bold">雰囲気</td>
      <td style="height: 50px;">
        <% @review.atmospheres.each do |atmosphere| %>
          <%= atmosphere.name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td class="font-weight-bold">レビュー</td>
      <td style="height: 50px;"><%= @review.text %></td>
    </tr>
  </table>
  <div>
    <p class="font-weight-bold">コメント件数：<%= @review.review_comments.count %></p>
    <% @review.review_comments.each do |review_comment| %>
      <p style="display: inline-block;">投稿者：</p>
      <P class="font-weight-bold" style="display: inline-block;"><%= review_comment.user.nickname %></P>
      <p style="display: inline-block;"><%= review_comment.created_at.strftime('%Y/%m/%d') %></p>
      <div>
        <P style="display: inline-block;">コメント：</P>
        <p style="display: inline-block;"><%= review_comment.comment %></p>
      </div>
      <div style="margin-bottom: 25px;">
        <%= link_to "削除", admin_review_review_comment_path(review_comment.review, review_comment), method: :delete, class: "btn btn-danger"  %>
      </div>
    <% end %>
  </div>
</div>
